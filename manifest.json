{
  "name": "DocWriter",
  "description": "Motivational tool to help you hit that sweet word limit. Currently only available to Google Docs",
  "version": "1.0",

  "permissions": [
    "storage",
    "activeTab",
    "declarativeContent"
  ],

  "background": {
    "scripts": [
      "background/background.js"
    ],
    "persistent": false
  },

  "icons": {},

  "page_action": {
    "default_popup": "index.html"
  },

  "manifest_version": 2
}